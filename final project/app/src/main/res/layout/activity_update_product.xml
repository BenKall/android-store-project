<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/redwhitepretty"
    tools:context=".updateProduct">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20sp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="@string/addproduct"
                android:textColor="#000"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnuppro"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/marzipan"
                android:drawableLeft="@drawable/moveto"
                android:fontFamily="sans-serif-smallcaps"
                android:text="@string/Updateprods" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtcurproname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/gradient2"
                    android:drawableLeft="@drawable/square"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="@string/proname"
                    android:textColor="@android:color/background_dark"
                    android:textSize="17dp" />

                <EditText
                    android:id="@+id/editproname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/gradient2"
                    android:ems="10"
                    android:fontFamily="sans-serif-smallcaps"
                    android:hint="Change"
                    android:inputType="textPersonName" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtcurprodes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/gradient2"
                    android:drawableLeft="@drawable/description"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="@string/prodes"
                    android:textColor="@android:color/background_dark"
                    android:textSize="17dp" />

                <EditText
                    android:id="@+id/editdes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/gradient2"
                    android:ems="10"
                    android:fontFamily="sans-serif-smallcaps"
                    android:hint="Change"
                    android:inputType="textPersonName" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtcurprotype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/gradient2"
                    android:drawableLeft="@drawable/lines"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="@string/protype"
                    android:textColor="@android:color/background_dark"
                    android:textSize="17dp" />

                <Spinner
                    android:id="@+id/editcity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtcurproprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/gradient2"
                    android:drawableLeft="@drawable/price"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="@string/propri"
                    android:textColor="@android:color/background_dark"
                    android:textSize="17dp" />

                <EditText
                    android:id="@+id/editproprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/gradient2"
                    android:ems="10"
                    android:fontFamily="sans-serif-smallcaps"
                    android:hint="Change"
                    android:inputType="textPersonName" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtcurproamount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/gradient2"
                    android:drawableLeft="@drawable/amount"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="@string/proamount"
                    android:textColor="@android:color/background_dark"
                    android:textSize="17dp" />

                <EditText
                    android:id="@+id/editproamount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/gradient2"
                    android:ems="10"
                    android:fontFamily="sans-serif-smallcaps"
                    android:hint="Change"
                    android:inputType="textPersonName" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10sp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="@string/anglerange"
                    android:textColor="#000"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/rdgA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/gradient2"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rdbAa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="@string/A"
                        android:checked="true"
                        android:textColor="#000"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/rdbAb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30sp"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="@string/B"
                        android:textColor="#000"
                        android:textSize="16dp"
                        android:textStyle="bold" />
                    <RadioButton
                        android:id="@+id/rdbAc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30sp"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="@string/C"
                        android:textColor="#000"
                        android:textSize="16dp"
                        android:textStyle="bold" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtW"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10sp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="@string/weightrange"
                    android:textColor="#000"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/rdgW"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/gradient2"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rdbWa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="@string/A"
                        android:checked="true"
                        android:textColor="#000"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/rdbWb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30sp"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="@string/B"
                        android:textColor="#000"
                        android:textSize="16dp"
                        android:textStyle="bold" />
                    <RadioButton
                        android:id="@+id/rdbWc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30sp"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="@string/C"
                        android:textColor="#000"
                        android:textSize="16dp"
                        android:textStyle="bold" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10sp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="@string/heightrange"
                    android:textColor="#000"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/rdgH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/gradient2"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rdbHa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="@string/A"
                        android:checked="true"
                        android:textColor="#000"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/rdbHb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30sp"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="@string/B"
                        android:textColor="#000"
                        android:textSize="16dp"
                        android:textStyle="bold" />
                    <RadioButton
                        android:id="@+id/rdbHc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30sp"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="@string/C"
                        android:textColor="#000"
                        android:textSize="16dp"
                        android:textStyle="bold" />
                </RadioGroup>
            </LinearLayout>

            <Button
                android:id="@+id/btnadd"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/marzipan"
                android:fontFamily="sans-serif-smallcaps"
                android:text="@string/addProductImage"
                android:clickable="false"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">


                <ImageButton
                    android:id="@+id/imgbtnleft"
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/gradient2"
                    app:srcCompat="@drawable/ic_baseline_arrow_left_24" />




                <ImageButton
                    android:id="@+id/curimgdisplay"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_weight="1"
                    android:background="#00000000"
                    tools:srcCompat="@tools:sample/avatars" />

                <ImageButton
                    android:id="@+id/imgbtnright"
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/gradient2"
                    app:srcCompat="@drawable/ic_baseline_arrow_right_24" />

            </LinearLayout>

            <Button
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/redwhitegradient"
                android:fontFamily="sans-serif-smallcaps"
                android:text="@string/Save" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>