<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/redwhitepretty"
    tools:context=".ShowAllProducts">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/allpro"
        android:layout_marginTop="20dp"
        android:textColor="#D0DD0C"
        android:textStyle="italic"
        android:textSize="30dp"
        android:layout_gravity="center_horizontal"
        />

    <Button
        android:id="@+id/backtoshopfromall"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/marzipan"
        android:drawableLeft="@drawable/ic_arrow_back_black_24dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="@string/back" />

    <ListView
        android:id="@+id/allprolst"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>